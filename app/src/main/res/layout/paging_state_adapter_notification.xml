<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/load_state_errorMessage"
            style="@style/FontPrimaryBold.TextColor.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingStart="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/load_state_retry"
            android:text="@string/failed_to_load" />

        <include
            android:id="@+id/load_state_progress"
            layout="@layout/loading_item_notification" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/load_state_retry"
            style="@style/Widget.Button.Secondary"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:minWidth="0dp"
            android:minHeight="@dimen/_25ssp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:text="@string/retry"
            android:textSize="@dimen/_9ssp" />
    </RelativeLayout>
</layout>
